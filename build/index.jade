head
  meta(charset="utf-8")
  meta(name="viewport" content="width=device-width, initial-scale=1")
  title graft
  link(rel="stylesheet" type="text/css" href="lib/normalize.css")
  link(rel="stylesheet" type="text/css" href="app.css")
  script(type="text/javascript" src="lib/zepto.min.js")
  script(type="text/javascript" src="lib/zepto.data.js")
  script(type="text/javascript" src="js/app.js")
  script(type="text/javascript" src="js/timeseries.js")
  script(type="text/javascript" src="js/bars.js")
  script(type="text/javascript" src="js/bubbles.js")
  script(type="text/javascript" src="js/donut.js")
  script(type="text/javascript" src="js/stack.js")
  script(type="text/javascript" src="js/stub.js")
  script(type="text/javascript" src="js/tooltip.js")

body
  .row
    .col.col-12.github
      a(href="https://github.com/danrashid/graft") View on GitHub
  .row
    .col.col-3
      .row
        .col#donut
      .row
        .col#bubbles
    .col.col-9
      .row
        .col#bars
      .row
        .col#stack

  table.graft.templates
    tr.heading
      th
        a.toggle(href="#") Toggle
      th.max
    tr.info
      td
        a.name(href="#")
      td.max
    tr.set
      td(colspan="2")
        table
          tr

  script(type="text/javascript" src="js/graphs.js")
  script(type='text/javascript').
    var data = Graft.stub();

    Graft.donut.bind('#donut', data);
    Graft.bubbles.bind('#bubbles', data, 0.5);
    Graft.bars.bind('#bars', data, true);
    Graft.stack.bind('#stack', data);
</html>
